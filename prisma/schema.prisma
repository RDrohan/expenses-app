datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  amount      Float
  category    Category
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Category {
  FOOD
  TRANSPORTATION
  HOUSING
  ENTERTAINMENT
  OTHER
}
